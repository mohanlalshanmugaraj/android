<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/backround_calculator"
    tools:context=".milege_calculator">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="#fff"
        android:text="Milege Calculator"
        android:textSize="40dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Reading :"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginRight="30dp"

        />
        <EditText
            android:id="@+id/first_reading"
            android:layout_width="150dp"
            android:background="#fff"
            android:layout_height="50dp"
            android:inputType="number"
            android:hint="KM"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:padding="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secound Reading :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="30dp"

            />
        <EditText
            android:id="@+id/second_reading"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:textAlignment="center"
            android:hint="KM"
            android:gravity="center"
            android:inputType="number"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:padding="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Litre :"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="30dp"

            />
        <EditText
            android:id="@+id/litre"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:inputType="numberDecimal"
            android:hint="L"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="110dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/result"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@drawable/backround_shape"
        android:text="Calcuulate" />
    <TextView
        android:id="@+id/milege_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER A DETAILS"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Reset"
        android:background="@drawable/backround_shape"/>

</LinearLayout>