<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".moreGirdView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:columnCount="1"
            android:rowCount="1"

            >
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
               android:gravity="center"

                >


            <Button
                android:id="@+id/bmi"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_margin="10dp"
                android:background="@drawable/bmi1"
                android:textColor="#000000"
                android:textSize="35dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/agecalculator"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_margin="10dp"
                android:background="@drawable/age"
                android:textColor="#000000"
                android:textSize="35dp"

                android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"

                >
            <Button
                android:id="@+id/tipcalculator"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_margin="10dp"
                android:background="@drawable/tip"
                android:textColor="#000000"
                android:textSize="35dp"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/milege_calculator"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:background="@drawable/milege"
                android:textColor="#000000"
                android:textSize="35dp"
                android:layout_margin="10dp"
                android:textStyle="bold"

                /></LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"

                >

                <Button
                android:id="@+id/emI_calculator"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:textColor="#000000"
                android:textSize="35dp"
                android:background="@drawable/emi"
                android:textStyle="bold"
                    android:layout_margin="10dp"

                />


            <Button
                android:id="@+id/fuel_calculator"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/fuel"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:textSize="35dp"
                android:textStyle="bold" />
            </LinearLayout>

        </GridLayout>


    </ScrollView>
</LinearLayout>